<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InGame">

    <com.hereams.neverland.gameObjects.view.component.CharacterView
        android:id="@+id/character"
        android:layout_width="600dp"
        android:layout_height="250dp"
        android:layout_gravity="center" />

    <com.hereams.neverland.gameObjects.view.component.InfoBox
        android:id="@+id/info_box"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="10px"
        android:elevation="1dp" />

    <com.hereams.neverland.gameObjects.view.component.DPadView
        android:id="@+id/dpad"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="bottom|start" />


</FrameLayout>